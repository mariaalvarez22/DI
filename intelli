HACER UNA VENTANA Y QUE SALGA HOLA MUNDO A LA IZQUIERDA

import javax.swing.*;

public class Main {
    public static void main(String[] args) {
        JFrame ventana = new JFrame("Ventana Principal");
        JLabel etiqueta = new JLabel("Hola Mundo");
        ventana.getContentPane().add(etiqueta);
        ventana.setSize(400, 200);
        ventana.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        ventana.setVisible(true);
    }
}

BORON CENTRADO Y TEXTO CENTRADO 
import javax.swing.*;
import java.awt.*;

public class Main {
    public static void main(String[] args) {
        JFrame ventana = new JFrame("Ventana Principal");
        ventana.setSize(400, 200);
        ventana.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        JButton boton = new JButton("Presióname");
        JLabel etiqueta = new JLabel("Hola Mundo");

        ventana.add(boton);
        ventana.add(etiqueta);
        ventana.setLayout(new FlowLayout());
        ventana.setVisible(true);

        ventana.setVisible(true);
    }
}

BOTON CENTRADO Y TEXTO CENTRADO Y CUANDO PRESIONAS BOTÓN DICE CHAU MUNDO 
import javax.swing.*;
import java.awt.*;

public class Main {
    public static void main(String[] args) {
        JFrame ventana = new JFrame("Ventana Principal");
        ventana.setSize(400, 200);
        ventana.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        JButton boton = new JButton("Presióname");
        JLabel etiqueta = new JLabel("Hola Mundo");

        boton.addActionListener(e ->etiqueta.setText("Chau mundo"));

        ventana.add(boton);
        ventana.add(etiqueta);
        ventana.setLayout(new FlowLayout());

        ventana.setVisible(true);

        ventana.setVisible(true);
    }
}
